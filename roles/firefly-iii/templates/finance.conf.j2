server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.finance.nelsonearle.com;
    include /etc/nginx/ssl.conf;
    location / {
        # TODO: change code to 301 after testing
        return 302 https://finance.nelsonearle.com$request_uri;
    }
}

server {
    # Note: You should disable gzip for SSL traffic.
    # See: https://bugs.debian.org/773332

    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ firefly_domain_name }};

    include /etc/nginx/ssl.conf;

    location / {
        proxy_pass http://127.0.0.1:{{ firefly_host_port }};
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
}
